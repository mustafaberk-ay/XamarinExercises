<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailGondermeApp.MainPage">

    <StackLayout>
        <Entry x:Name="entrySubject" Placeholder="Subject"/>
        <Editor x:Name="editorMessage" Placeholder="Message"/>
        <Entry x:Name="entryAdres" Placeholder="Adres"/>
        <Button Text="Gonder" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
